{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchManagers": ["deno"],
      "groupName": "deno dependencies",
      "groupSlug": "deno"
    },
    {
      "matchManagers": ["npm"],
      "groupName": "npm dependencies",
      "groupSlug": "npm"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^.deno-version$"],
      "matchStrings": ["^(?<currentValue>\\d+\\.\\d+\\.\\d+)$"],
      "depNameTemplate": "denoland/deno",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver",
      "packageName": "deno-version"
    },
    {
      "fileMatch": ["^\\.devcontainer/devcontainer\\.json$"],
      "matchStrings": [
        "--build-arg=DENO_VERSION=(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "depNameTemplate": "denoland/deno",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver",
      "packageName": "deno-devcontainer"
    }
  ]
}
