{
  "publish": false,
  "imports": {
    "@playwright/test": "npm:@playwright/test@1.58.0",
    "@std/assert": "jsr:@std/assert@1.0.17",
    "@std/fs": "jsr:@std/fs@1.0.22",
    "@std/path": "jsr:@std/path@1.1.4",
    "@std/testing": "jsr:@std/testing@1.0.17",
    "@typescript-eslint/eslint-plugin": "npm:@typescript-eslint/eslint-plugin@8.54.0",
    "@typescript-eslint/parser": "npm:@typescript-eslint/parser@8.54.0",
    "@vento/vento": "jsr:@vento/vento@1.14.0",
    "baseline-browser-mapping": "npm:baseline-browser-mapping@2.9.18",
    "components/": "./src/components/",
    "cssnano-preset-advanced": "npm:cssnano-preset-advanced@7.0.10",
    "cssnano": "npm:cssnano@7.1.2",
    "eslint-config-prettier": "npm:eslint-config-prettier@10.1.8",
    "eslint-plugin-import": "npm:eslint-plugin-import@2.32.0",
    "eslint-plugin-jsdoc": "npm:eslint-plugin-jsdoc@62.4.1",
    "eslint-plugin-promise": "npm:eslint-plugin-promise@7.2.1",
    "eslint-plugin-unicorn": "npm:eslint-plugin-unicorn@62.0.0",
    "eslint": "npm:eslint@9.39.2",
    "fast-check": "npm:fast-check@4.5.3",
    "htmlnano": "npm:htmlnano@3.0.0",
    "http-server": "npm:http-server@14.1.1",
    "jiti": "npm:jiti@2.6.1",
    "playwright": "npm:playwright@1.58.0",
    "postcss": "npm:postcss@8.5.6",
    "prettier": "npm:prettier@3.8.1",
    "scripts/": "./src/scripts/",
    "stylelint-config-standard": "npm:stylelint-config-standard@40.0.0",
    "stylelint": "npm:stylelint@17.0.0",
    "terser": "npm:terser@5.46.0",
    "uglify-js": "npm:uglify-js@3.19.3",
    "zod": "npm:zod@4.3.6"
  },
  "tasks": {
    "build": {
      "description": "Builds the site",
      "command": "BROWSERSLIST_ROOT_PATH=. deno run --permission-set=build src/generate-site.mts"
    },
    "deno:lock-update": {
      "description": "Updates the lock file",
      "command": "deno cache --frozen=false src/generate-site.mts && deno install"
    },
    "deno:update-dependencies": {
      "description": "Updates Deno dependencies",
      "command": "deno outdated && deno outdated --update --latest"
    },
    "eslint:check": {
      "description": "Runs ESLint on the codebase",
      "command": "deno run --permission-set=eslint:check npm:eslint --concurrency=1 ."
    },
    "git:pre-commit": {
      "description": "Updates and validadates the code as done in CI",
      "command": "deno install && deno task deno:lock-update && deno test --coverage && deno lint && deno task eslint:check && deno task stylelint:check && deno task prettier:debug-check && deno task prettier:write && deno fmt && deno check ."
    },
    "playwright:install": {
      "description": "Installs Playwright dependencies",
      "command": "deno run --permission-set=playwright:install npm:playwright install --with-deps"
    },
    "playwright:show-report": {
      "description": "Shows the Playwright report",
      "command": "deno run --permission-set=playwright:show-report npm:playwright show-report"
    },
    "playwright:test": {
      "description": "Runs Playwright tests",
      "dependencies": ["playwright:install"],
      "command": "deno run --permission-set=playwright:install npm:playwright test"
    },
    "prettier:debug-check": {
      "description": "Runs prettier on the code through Deno - --debug-check",
      "command": "deno run --permission-set=prettier:debug-check npm:prettier . --debug-check"
    },
    "prettier:write": {
      "description": "Runs prettier on the code through Deno - --write",
      "command": "deno run --permission-set=prettier:write npm:prettier . --write"
    },
    "renovate:config-check": {
      "description": "Runs Renovate config validator",
      "command": "npx --yes --package renovate -- renovate-config-validator --strict"
    },
    "serve:dist": {
      "description": "Serves the generated site",
      "command": "deno run --permission-set=serve:dist npm:http-server dist --port 8080 --silent"
    },
    "stylelint:check": {
      "description": "Runs stylelint on the codebase",
      "command": "deno run --permission-set=stylelint:check npm:stylelint --config ./stylelint.config.mjs \"**/*.css\""
    },
    "stylelint:fix": {
      "description": "Runs stylelint on the codebase",
      "command": "deno run --permission-set=stylelint:fix npm:stylelint --config ./stylelint.config.mjs --fix \"**/*.css\""
    },
    "test:e2e": {
      "description": "Runs end-to-end tests",
      "dependencies": ["playwright:test"]
    }
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 80,
    "semiColons": true,
    "proseWrap": "preserve",
    "singleQuote": false,
    "useTabs": false
  },
  "lint": {
    "rules": {
      "tags": ["recommended", "workspace"],
      "exclude": ["require-await"]
    }
  },
  "exclude": [
    "build/",
    "coverage",
    "dist/",
    "playwright-report/",
    "test-results/",
    "./assets/google3decab8acc23e179.html"
  ],
  "nodeModulesDir": "auto",
  "permissions": {
    "build": {
      "env": {
        "allow": ["CI", "BROWSERSLIST_ROOT_PATH"],
        "ignore": true
      },
      "read": ["./", "./assets", "./build", "./dist", "./src"],
      "write": ["./build", "./dist"],
      "net": [
        "api.ratings.food.gov.uk:443",
        "ratings.food.gov.uk:443",
        "food-hygiene-uk.github.io:443"
      ],
      "sys": ["homedir", "uid"]
    },
    "eslint:check": {
      "env": {
        "ignore": true
      },
      "read": {
        "allow": true
      },
      "write": ["./.eslintcache"],
      "sys": ["cpus", "homedir"]
    },
    "playwright:install": {
      "env": {
        "allow": true
      },
      "read": {
        "allow": [
          "/proc/version",
          "/etc/os-release",
          "/home/node/.cache/ms-playwright",
          "/home/runner/.cache/ms-playwright",
          "/tmp/",
          "/ms-playwright/.docker-info"
        ],
        "ignore": true
      },
      "write": [
        "/home/node/.cache/ms-playwright",
        "/home/runner/.cache/ms-playwright",
        "/tmp/"
      ],
      "sys": ["osRelease", "homedir", "uid"],
      "run": ["/usr/local/bin/deno", "/sbin/ldconfig", "which", "sudo"]
    },
    "playwright:show-report": {
      "env": {
        "ignore": true
      },
      "read": [
        "/proc/version",
        "/etc/os-release",
        "../node_modules",
        "/node_modules",
        "./"
      ],
      "sys": ["osRelease", "homedir", "uid"],
      "net": ["127.0.0.1:9323"],
      "run": [
        "./node_modules/.deno/playwright-core@1.52.0/node_modules/playwright-core/lib/utilsBundleImpl/xdg-open."
      ]
    },
    "playwright:test": {
      "env": {
        "ignore": true
      },
      "read": {
        "allow": ["./", "/proc/version", "/etc/os-release", "/tmp/"],
        "ignore": true
      },
      "write": ["./test-results/", "./playwright-report", "/tmp/"],
      "sys": ["cpus", "homedir", "osRelease", "uid"],
      "net": ["localhost", "[::1]:8080", "127.0.0.1:8080", "127.0.0.1:9323"],
      "run": true
    },
    "prettier:debug-check": {
      "env": {
        "ignore": true
      },
      "read": [
        "./",
        "./.gitignore",
        "./.prettierignore",
        "./package.json",
        "./node_modules"
      ],
      "write": ["./node_modules/.cache/prettier"],
      "sys": ["cpus", "uid"]
    },
    "prettier:write": {
      "env": {
        "ignore": true
      },
      "read": [
        "./",
        "./.gitignore",
        "./.prettierignore",
        "./package.json",
        "./node_modules"
      ],
      "write": ["./"],
      "sys": ["cpus", "uid"]
    },
    "serve:dist": {
      "env": {
        "ignore": true
      },
      "read": ["./dist"],
      "sys": ["networkInterfaces"],
      "net": ["0.0.0.0:8080"]
    },
    "stylelint:check": {
      "env": {
        "ignore": true
      },
      "read": {
        "allow": ["./"],
        "ignore": true
      },
      "write": [".stylelintcache"],
      "sys": ["cpus", "gid", "homedir", "uid"]
    },
    "stylelint:fix": {
      "env": {
        "ignore": true
      },
      "read": {
        "allow": ["./"],
        "ignore": true
      },
      "write": ["./"],
      "sys": ["cpus", "gid", "homedir", "uid"]
    }
  }
}
