{
  "imports": {
    "@std/assert": "jsr:@std/assert@1.0.11",
    "@std/fs": "jsr:@std/fs@1.0.11",
    "@std/path": "jsr:@std/path@1.0.8",
    "@vento/vento": "jsr:@vento/vento@1.12.16",
    "components/": "./src/components/",
    "cssnano-preset-advanced": "npm:cssnano-preset-advanced@7.0.6",
    "cssnano": "npm:cssnano@7.0.6",
    "postcss": "npm:postcss@8.5.3",
    "prettier": "npm:prettier@3.5.3",
    "scripts/": "./src/scripts/",
    "uglify-js": "npm:uglify-js@3.19.3",
    "zod": "npm:zod@3.24.1"
  },
  "tasks": {
    "prettier:check": {
      "description": "Runs prettier on the code through Deno - --check",
      "command": "deno run --deny-env --allow-read=./,./.gitignore,./.prettierignore,./package.json,./node_modules --allow-write=./node_modules/.cache/prettier --allow-sys=cpus,uid npm:prettier . --check"
    },
    "prettier:debug-check": {
      "description": "Runs prettier on the code through Deno - --debug-check",
      "command": "deno run --deny-env --allow-read=./,./.gitignore,./.prettierignore,./package.json,./node_modules --allow-write=./node_modules/.cache/prettier --allow-sys=cpus,uid npm:prettier . --debug-check"
    },
    "prettier:write": {
      "description": "Runs prettier on the code through Deno - --write",
      "command": "deno run --deny-env --allow-read=./,./.gitignore,./.prettierignore,./package.json,./node_modules --allow-write=./node_modules/.cache/prettier,./src --allow-sys=cpus,uid npm:prettier . --write"
    },
    "pre-commit": {
      "description": "Updates and validadates the code as done in CI",
      "command": "deno install && deno test && deno lint && deno task prettier:debug-check && deno task prettier:write && deno fmt && deno check src/generate-site.mts"
    },
    "build": {
      "description": "Builds the site",
      "command": "DENO_TRACE_PERMISSIONS=1 BROWSERSLIST_ROOT_PATH=. deno run --allow-env=CI,BROWSERSLIST_ROOT_PATH --deny-env=NO_COLOR,FORCE_COLOR,TERM,BROWSERSLIST,BROWSERSLIST_DISABLE_CACHE,BROWSERSLIST_IGNORE_OLD_DATA,BROWSERSLIST_STATS,BROWSERSLIST_CONFIG,BROWSERSLIST_ENV,UGLIFY_BUG_REPORT,NODE_ENV --allow-net=api.ratings.food.gov.uk:443,ratings.food.gov.uk:443 --allow-read=./,./assets,./build,./dist,./src --allow-write=./build,./dist --allow-sys=homedir,uid src/generate-site.mts"
    },
    "lock-update": {
      "description": "Updates the lock file",
      "command": "deno cache --frozen=false src/generate-site.mts && deno install"
    },
    "update-deno": {
      "description": "Fetches the latest Deno version and updates .deno-version and devcontainer.json",
      "command": "deno run --allow-net=api.github.com --allow-read=.deno-version,./.devcontainer/devcontainer.json --allow-write=.deno-version,./.devcontainer/devcontainer.json scripts/update-deno.mts"
    }
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 80,
    "semiColons": true,
    "proseWrap": "preserve",
    "singleQuote": false,
    "useTabs": false
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["require-await"]
    }
  },
  "exclude": ["./assets/google3decab8acc23e179.html"],
  "nodeModulesDir": "auto"
}
